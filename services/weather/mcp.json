{
  "name": "aviation-weather",
  "description": "Aviation Weather Center API providing access to weather observations and forecasts",
  "version": "1.0.0",
  "tools": [
    {
      "name": "get_metar",
      "description": "Get METAR (current weather observation) data for specified stations",
      "parameters": {
        "type": "object",
        "properties": {
          "ids": {
            "type": "string",
            "description": "Comma-separated list of ICAO station identifiers (e.g., 'KJFK,KLAX')"
          },
          "hours": {
            "type": "integer",
            "description": "Number of hours before current time (1-24)",
            "minimum": 1,
            "maximum": 24,
            "default": 2
          },
          "mostRecent": {
            "type": "boolean",
            "description": "If true, return only the latest observation for each station",
            "default": true
          },
          "format": {
            "type": "string",
            "description": "Response format",
            "enum": ["xml", "json", "csv"],
            "default": "xml"
          }
        },
        "required": ["ids"]
      },
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/metar",
        "headers": {
          "Accept": "application/${format}"
        },
        "query": {
          "format": "${format}"
        }
      }
    },
    {
      "name": "taf",
      "description": "Retrieve TAF data for specified stations",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/taf",
        "query": {
          "ids": "string",
          "format": "xml",
          "hours_before": "number"
        }
      }
    },
    {
      "name": "forecast_discussion",
      "description": "Retrieve Area Forecast Discussion for specified WFO",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/fcstdisc",
        "query": {
          "cwa": "string",
          "type": {
            "type": "string",
            "enum": ["afd", "af"],
            "default": "afd"
          },
          "format": "xml"
        }
      }
    },
    {
      "name": "cwa",
      "description": "Retrieve Center Weather Advisories",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/cwa",
        "query": {
          "loc": {
            "type": "string",
            "description": "CWSU identifier to filter by"
          },
          "hazard": {
            "type": "string",
            "enum": ["all", "ts", "turb", "ice", "ifr"],
            "default": "all",
            "description": "Type of hazard to filter by"
          },
          "format": {
            "type": "string",
            "enum": ["xml", "json", "geojson"],
            "default": "xml"
          }
        }
      }
    },
    {
      "name": "mis",
      "description": "Retrieve Meteorological Impact Statements",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/mis",
        "query": {
          "loc": {
            "type": "string",
            "description": "CWSU identifier to filter by"
          },
          "format": {
            "type": "string",
            "enum": ["xml", "json"],
            "default": "xml"
          }
        }
      }
    },
    {
      "name": "gairmet",
      "description": "Retrieve Graphical AIRMETs for the contiguous United States",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/gairmet",
        "query": {
          "type": {
            "type": "string",
            "enum": ["sierra", "tango", "zulu"],
            "description": "Product type (sierra=IFR/mountain obscuration, tango=turbulence, zulu=icing)"
          },
          "hazard": {
            "type": "string",
            "enum": ["turb-hi", "turb-lo", "llws", "sfc_wind", "ifr", "mtn_obs", "ice", "fzlvl"],
            "description": "Specific hazard type to filter by"
          },
          "format": {
            "type": "string",
            "enum": ["decoded", "json", "geojson", "xml"],
            "default": "xml"
          },
          "date": {
            "type": "string",
            "description": "Date in yyyymmdd_hhmm format or ISO8601"
          }
        }
      }
    },
    {
      "name": "airsigmet",
      "description": "Retrieve domestic SIGMETs for the United States",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/airsigmet",
        "query": {
          "format": {
            "type": "string",
            "enum": ["raw", "json", "xml"],
            "default": "xml",
            "description": "Response format"
          },
          "hazard": {
            "type": "string",
            "enum": ["conv", "turb", "ice", "ifr"],
            "description": "Type of hazard to filter by"
          },
          "level": {
            "type": "number",
            "description": "The level +-3000' to search"
          },
          "date": {
            "type": "string",
            "description": "Date in yyyymmdd_hhmm format or ISO8601"
          }
        }
      }
    },
    {
      "name": "isigmet",
      "description": "Retrieve international SIGMETs (Significant Meteorological Information)",
      "method": "GET",
      "url": "https://aviationweather.gov/api/data/isigmet",
      "parameters": {
        "format": {
          "type": "string",
          "description": "Response format (xml or json)",
          "default": "xml"
        },
        "hazard": {
          "type": "string",
          "description": "Filter by hazard type (e.g., turb, ice, va)",
          "optional": true
        },
        "level": {
          "type": "integer",
          "description": "Filter by flight level (in hundreds of feet)",
          "optional": true
        }
      }
    },
    {
      "name": "pirep",
      "description": "Retrieve PIREPs (Pilot Reports) and AIREPs (Aircraft Reports)",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/pirep",
        "query": {
          "format": {
            "type": "string",
            "enum": ["xml", "json"],
            "default": "xml",
            "description": "Response format"
          },
          "hours": {
            "type": "integer",
            "description": "Number of hours before current time (1-24)",
            "minimum": 1,
            "maximum": 24,
            "default": 2
          },
          "type": {
            "type": "string",
            "enum": ["pirep", "airep"],
            "description": "Type of reports to retrieve (PIREP or AIREP)",
            "optional": true
          },
          "bbox": {
            "type": "string",
            "description": "Bounding box in format minlon,minlat,maxlon,maxlat",
            "optional": true
          }
        }
      }
    },
    {
      "name": "windtemp",
      "description": "Retrieves Wind and Temperature Aloft forecasts for specified regions and levels",
      "method": "GET",
      "url": "https://aviationweather.gov/api/data/windtemp",
      "parameters": {
        "region": {
          "type": "string",
          "description": "Region to display forecasts for",
          "enum": ["all", "bos", "mia", "chi", "dfw", "slc", "sfo", "alaska", "hawaii", "other_pac"],
          "default": "all"
        },
        "level": {
          "type": "string",
          "description": "Flight level range",
          "enum": ["low", "high"],
          "default": "low"
        },
        "fcst": {
          "type": "string",
          "description": "Forecast time in hours",
          "enum": ["06", "12", "24"],
          "default": "06"
        }
      }
    },
    {
      "name": "stationinfo",
      "description": "Retrieve station observation location information",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/stationinfo",
        "query": {
          "ids": {
            "type": "string",
            "description": "Station ID(s) separated by commas",
            "optional": true
          },
          "bbox": {
            "type": "string",
            "description": "Geographic bounding box in format lat0,lon0,lat1,lon1",
            "optional": true
          },
          "format": {
            "type": "string",
            "enum": ["raw", "json", "geojson", "xml"],
            "default": "json",
            "description": "Response format"
          }
        }
      }
    },
    {
      "name": "airport",
      "description": "Retrieve airport information",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/airport",
        "query": {
          "ids": {
            "type": "string",
            "description": "Station ID(s) separated by commas",
            "optional": true
          },
          "bbox": {
            "type": "string",
            "description": "Geographic bounding box in format lat0,lon0,lat1,lon1",
            "optional": true
          },
          "format": {
            "type": "string",
            "enum": ["decoded", "json", "geojson"],
            "default": "json",
            "description": "Response format"
          }
        }
      }
    },
    {
      "name": "navaid",
      "description": "Retrieve navigational aid data",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/navaid",
        "query": {
          "ids": {
            "type": "string",
            "description": "5 letter Fix ID(s) separated by commas",
            "optional": true
          },
          "bbox": {
            "type": "string",
            "description": "Geographic bounding box in format lat0,lon0,lat1,lon1",
            "optional": true
          },
          "format": {
            "type": "string",
            "enum": ["raw", "json", "geojson"],
            "default": "json",
            "description": "Response format"
          }
        }
      }
    },
    {
      "name": "fix",
      "description": "Retrieve navigational fix data",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/fix",
        "query": {
          "ids": {
            "type": "string",
            "description": "5 letter Fix ID(s) separated by commas",
            "optional": true
          },
          "bbox": {
            "type": "string",
            "description": "Geographic bounding box in format lat0,lon0,lat1,lon1",
            "optional": true
          },
          "format": {
            "type": "string",
            "enum": ["raw", "json", "geojson"],
            "default": "json",
            "description": "Response format"
          }
        }
      }
    },
    {
      "name": "feature",
      "description": "Retrieve feature data",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/feature",
        "query": {
          "bbox": {
            "type": "string",
            "description": "Geographic bounding box in format lat0,lon0,lat1,lon1",
            "optional": true
          },
          "format": {
            "type": "string",
            "enum": ["raw", "json", "geojson"],
            "default": "json",
            "description": "Response format"
          }
        }
      }
    },
    {
      "name": "obstacle",
      "description": "Retrieve obstacle data",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/obstacle",
        "query": {
          "bbox": {
            "type": "string",
            "description": "Geographic bounding box in format lat0,lon0,lat1,lon1",
            "optional": true
          },
          "format": {
            "type": "string",
            "enum": ["raw", "json", "geojson"],
            "default": "json",
            "description": "Response format"
          }
        }
      }
    }
  ]
} 