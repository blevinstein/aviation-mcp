{
  "name": "aviation-weather",
  "description": "Aviation Weather Center API providing access to weather observations and forecasts",
  "version": "1.0.0",
  "tools": [
    {
      "name": "get_metar",
      "description": "Get METAR (current weather observation) data for specified stations",
      "parameters": {
        "type": "object",
        "properties": {
          "ids": {
            "type": "string",
            "description": "Comma-separated list of ICAO station identifiers (e.g., 'KJFK,KLAX')"
          },
          "hours": {
            "type": "integer",
            "description": "Number of hours before current time (1-24)",
            "minimum": 1,
            "maximum": 24,
            "default": 2
          },
          "mostRecent": {
            "type": "boolean",
            "description": "If true, return only the latest observation for each station",
            "default": true
          },
          "format": {
            "type": "string",
            "description": "Response format",
            "enum": ["xml", "json", "csv"],
            "default": "xml"
          }
        },
        "required": ["ids"]
      },
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/metar",
        "headers": {
          "Accept": "application/${format}"
        },
        "query": {
          "format": "${format}"
        }
      }
    },
    {
      "name": "taf",
      "description": "Retrieve TAF data for specified stations",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/taf",
        "query": {
          "ids": "string",
          "format": "xml",
          "hours_before": "number"
        }
      }
    },
    {
      "name": "forecast_discussion",
      "description": "Retrieve Area Forecast Discussion for specified WFO",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/fcstdisc",
        "query": {
          "cwa": "string",
          "type": {
            "type": "string",
            "enum": ["afd", "af"],
            "default": "afd"
          },
          "format": "xml"
        }
      }
    },
    {
      "name": "cwa",
      "description": "Retrieve Center Weather Advisories",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/cwa",
        "query": {
          "loc": {
            "type": "string",
            "description": "CWSU identifier to filter by"
          },
          "hazard": {
            "type": "string",
            "enum": ["all", "ts", "turb", "ice", "ifr"],
            "default": "all",
            "description": "Type of hazard to filter by"
          },
          "format": {
            "type": "string",
            "enum": ["xml", "json", "geojson"],
            "default": "xml"
          }
        }
      }
    },
    {
      "name": "mis",
      "description": "Retrieve Meteorological Impact Statements",
      "http": {
        "method": "GET",
        "url": "https://aviationweather.gov/api/data/mis",
        "query": {
          "loc": {
            "type": "string",
            "description": "CWSU identifier to filter by"
          },
          "format": {
            "type": "string",
            "enum": ["xml", "json"],
            "default": "xml"
          }
        }
      }
    }
  ]
} 